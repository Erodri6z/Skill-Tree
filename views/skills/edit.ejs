<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>
<main>
  <div>
    <h1>Rethinking That Skill?</h1>
    <form action="/skills/<%= skill._id %>?_method=PUT" method="POST">
      <label>
        Name of Skill:
        <input 
        type="text" 
        name="name" 
        value="<%= skill.name %>" 
        autocomplete="off">
      </label>
      <label>
        Description
        <input type="text" 
        name="description" 
        id="description" 
        value="<%= skill.description %>"
        autocomplete="off">
      </label>
      <label>
        Experience:
        <select name="experience"
        value="<%= skill.experience %>"
        id="experience">
        <option value="Less than a year">1 year or less</option>
        <option value="1-2 years">1-2 years</option>
        <option value="2-3 years">2-3 years</option>
        <option value="3+ years">3+ years</option>
        </select>
      </label>
      <button class="btn" type="submit">Edit the Details</button>
    </form>
  </div>
</main>



<%- include('../partials/footer') %>